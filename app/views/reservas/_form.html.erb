<%= form_with(model: reserva, class: 'reserva-form') do |form| %>
  <% if reserva.errors.any? %>
    <div class="error-message">
      <h2><%= pluralize(reserva.errors.count, "error") %> prohibited this reserva from being saved:</h2>
      <ul>
        <% reserva.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data_ini, "Data de Início da Reserva" %>
    <%= form.date_select :data_ini, start_year: Date.current.year, end_year: 2100, default: Date.current + 3.days %>
  </div>

  <div class="field">
<%= form.label :data_fim, "Data do Fim da Reserva" %>
    <%= form.date_select :data_fim, start_year: Date.current.year, end_year: 2100, default: Date.current + 60.days %>
  </div>

  <div class="field">
    <%= form.label :condomino_id %>
    <%= form.collection_select :condomino_id, Condomino.all, :id, :nome, prompt: "Selecione um Condômino" %>
  </div>

  <div class="field">
    <%= form.label :ambiente_id %>
    <%= form.collection_select :ambiente_id, Ambiente.all, :id, :nome, prompt: "Selecione um Ambiente" %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Reserva.statuses.keys.map { |s| [s.humanize, s] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
